generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// better-auth fields

model User {
  id             String          @id @map("_id")
  name           String
  email          String
  emailVerified  Boolean         @default(false)
  image          String?
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @default(now()) @updatedAt
  sessions       Session[]
  accounts       Account[]
  calendarEvents CalendarEvent[]
  memos          Memo[]

  @@unique([email])
  @@map("user")
}

model Session {
  id        String   @id @map("_id")
  expiresAt DateTime
  token     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([token])
  @@map("session")
}

model Account {
  id                    String    @id @map("_id")
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  @@map("account")
}

model Verification {
  id         String   @id @map("_id")
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now()) @updatedAt

  @@map("verification")
}

// iCalendar-based calendar events
model CalendarEvent {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  userId        String
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  // iCalendar core fields (extracted for querying)
  uid           String   @unique // iCal UID for deduplication
  summary       String            // SUMMARY (title)
  dtstart       DateTime          // Start time (UTC)
  dtend         DateTime?         // End time (UTC, null for all-day single events)
  dtstartTzid   String?           // Original timezone (IANA)
  isAllDay      Boolean  @default(false)

  // Full iCalendar data for round-trip fidelity
  icalData      String            // Raw VEVENT component

  // Recurrence fields (extracted for efficient queries)
  rrule         String?           // RRULE string
  hasRecurrence Boolean  @default(false)
  recurrenceId  String?           // RECURRENCE-ID for exception instances
  masterEventId String?  @db.ObjectId // Reference to master for exceptions

  // Optional metadata
  description   String?
  location      String?
  color         String?           // User-selected color (CSS color value)
  
  // Sync metadata (for future CalDAV integration)
  calendarId    String?           // External calendar ID
  etag          String?           // For sync conflict detection
  syncStatus    String   @default("local") // local | synced | modified | deleted
  lastSyncedAt  DateTime?

  // Housekeeping
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([userId, dtstart])
  @@index([userId, hasRecurrence])
  @@map("calendar_event")
}

// Memo system for task suggestions
model Memo {
  id                     String   @id @default(auto()) @map("_id") @db.ObjectId
  userId                 String
  user                   User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  title                  String
  genre                  String?
  type                   String   // 期限付き | バックログ | ルーティン
  createdAt              DateTime @default(now())
  deadline               DateTime?

  // Recurrence goal (for ルーティン type)
  recurrenceGoalCount    Int?
  recurrenceGoalPeriod   String?  // day | week | month

  locationPreference     String   // home/near_home | workplace/near_workplace | no_preference

  // Status tracking
  timeSpentMinutes       Int      @default(0)
  completionState        String   @default("not_started") // not_started | in_progress | completed
  completionsThisPeriod  Int?
  periodStartDate        DateTime?

  // Duration estimates
  sessionDuration        Int?     // minutes
  totalDurationExpected  Int?     // minutes

  lastActivity           DateTime?
  importance             String?  // low | medium | high

  // ============================================================================
  // TYPE-SPECIFIC STATE (New scoring system)
  // ============================================================================
  
  // Routine state (ルーティン type)
  routineAcceptedToday      Boolean?   // If true, task is done for the day
  routineCompletedToday     Boolean?   // Actually completed (not just accepted)
  routineCompletedCountWeek Int?       // Count of completions this week
  routineLastCompletedDay   DateTime?  // Date of last completion
  routineWasCappedThisWeek  Boolean?   // True if display cap was active
  routineWeekStartDate      DateTime?  // Start of current tracking week
  
  // Backlog state (バックログ type)
  backlogAcceptedToday      Boolean?   // If true, task treated as done for day
  backlogLastCompletedDay   DateTime?  // Date of last completion

  updatedAt              DateTime @updatedAt

  @@index([userId, type])
  @@index([userId, completionState])
  @@index([userId, deadline])
  @@map("memo")
}

// Timetable configuration (時間割 settings)
model TimetableConfig {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  userId          String   @unique
  
  // Time settings (stored as "HH:mm" strings)
  dayStartTime    String   @default("09:00")    // Start of first class
  lunchStartTime  String   @default("12:00")    // Lunch break start
  lunchEndTime    String   @default("13:00")    // Lunch break end
  breakDuration   Int      @default(10)          // Minutes between classes
  cellDuration    Int      @default(50)          // Minutes per class
  
  // Exception date ranges (stored as JSON array of {start: string, end: string})
  // Dates in YYYY-MM-DD format
  exceptionRanges Json?    @default("[]")
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@map("timetable_config")
}

// Timetable cells (individual class slots)
model TimetableCell {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  userId          String
  
  dayOfWeek       Int      // 0=Mon, 1=Tue, 2=Wed, 3=Thu, 4=Fri
  slotIndex       Int      // 0-4 (5 slots per day, excluding lunch)
  
  title           String   @default("")
  attendance      String   @default("出席する")    // 出席する | 出席しない
  workAllowed     String   @default("作業不可")    // 作業可 | 作業不可
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@unique([userId, dayOfWeek, slotIndex])
  @@index([userId])
  @@map("timetable_cell")
}

// ============================================================================
// Action Sync Pipeline
// Persists suggestion actions across sessions/devices
// Cleaned up daily - only today's actions persist
// ============================================================================

// Simple action tracking for suggestions
// Actions: "accepted" | "rejected" | "missed"
// No timestamps needed - presence indicates action was taken today
// Cleanup happens on new day (all records deleted)
model SuggestionAction {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  userId          String
  
  memoId          String   // ID of the memo
  action          String   // "accepted" | "rejected" | "missed"
  
  // Time slot info (only for accepted - needed for gap subtraction)
  startTime       String?  // Start time in HH:mm format
  endTime         String?  // End time in HH:mm format
  duration        Int?     // Duration in minutes
  
  createdAt       DateTime @default(now())

  @@unique([userId, memoId, action])
  @@index([userId])
  @@map("suggestion_action")
}

// Cached transit route info to avoid redundant API calls
model CachedTransitInfo {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  userId          String
  
  // Event identification
  eventId         String   // Calendar event ID (or unique ID for recurring instance)
  eventLocation   String   // Location string for the event
  eventStart      DateTime // When the event starts
  
  // User location when cached (for invalidation)
  userLat         Float
  userLon         Float
  
  // Cached route data (JSON string)
  transitData     String   // Serialized TransitInfo (excluding loading states)
  
  // Metadata
  cachedAt        DateTime
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@unique([userId, eventId])
  @@index([userId, eventStart])
  @@map("cached_transit_info")
}

