// ============================================================================
// Event Templates (for autocomplete suggestions based on past events)
// ============================================================================

// Stores unique event patterns for autocomplete suggestions
model EventTemplate {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  userId          String
  
  // Template identification (unique per user + title + importance)
  title           String   // Event title (primary matching key)
  importance      String   // low | medium | high
  
  // Template data to pre-fill
  color           String?  // User-selected color
  address         String?  // Default location
  timeLabel       String   // all-day | some-timing | timed
  defaultStartTime String? // For timed events: default start time (HH:mm)
  defaultEndTime   String? // For timed events: default end time (HH:mm)
  defaultDuration  Int?    // Duration in minutes (alternative to end time)
  
  // Usage tracking
  useCount        Int      @default(1) // How many times this template was used
  lastUsedAt      DateTime @default(now())
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@unique([userId, title, importance])
  @@index([userId])
  @@index([userId, title]) // For prefix search
  @@map("event_template")
}

// Google Calendar sync configuration
// Tracks which Google calendars are synced for each user
model GoogleCalendarSync {
  id                String   @id @default(auto()) @map("_id") @db.ObjectId
  userId            String

  googleCalendarId  String   // e.g., "primary" or specific calendar ID
  calendarName      String   // Display name for UI
  calendarColor     String?  // Google's calendar color

  syncToken         String?  // For incremental sync
  lastSyncAt        DateTime?
  syncEnabled       Boolean  @default(true)

  lastError         String?
  errorCount        Int      @default(0)

  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@unique([userId, googleCalendarId])
  @@index([userId])
  @@map("google_calendar_sync")
}

// Active timer session for cross-device sync
// Only ONE active timer per user (userId is unique)
model ActiveTimerSession {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  userId          String   @unique  // Only ONE active session per user

  memoId          String
  taskTitle       String
  startedAt       DateTime
  plannedEndTime  String   // HH:mm
  mode            String   // "normal" | "pomodoro"
  pomodoroState   Json?    // PomodoroState object

  // Pause state
  isPaused        Boolean  @default(false)
  pausedAt        DateTime?
  pausedDuration  Int      @default(0) // Total paused time in ms

  // Device identification
  deviceId        String   // UUID generated per browser
  deviceName      String?  // Optional: "Chrome on MacOS"

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@map("active_timer_session")
}

// ============================================================================
// Task Completion Logs (for Report feature)
// ============================================================================

// Stores task completion snapshots for analytics and reporting
model TaskCompletionLog {
  id                    String   @id @default(auto()) @map("_id") @db.ObjectId
  userId                String

  // Task snapshot at completion time
  memoId                String   @db.ObjectId  // Reference to original memo (may be deleted)
  taskTitle             String                 // Snapshot - title at completion
  taskType              String                 // 期限付き | バックログ | ルーティン
  taskGenre             String?                // Genre at completion

  // Completion details
  completedAt           DateTime @default(now())
  timeSpentMinutes      Int                    // Duration of this session
  totalTimeSpentMinutes Int                    // Total time spent on task at completion

  // Type-specific data
  completionsThisPeriod Int?                   // For routines: count after this completion
  recurrenceGoal        Json?                  // For routines: {count, period}

  // Event link snapshot (if any)
  linkedEventTitle      String?                // Title of linked event (if event-linked)
  linkedEventType       String?                // "calendar" | "timetable"

  // Action taken
  actionType            String                 // "delete" | "advance" | "increment"

  // Metadata
  createdAt             DateTime @default(now())

  @@index([userId, completedAt])
  @@map("task_completion_log")
}

// Daily activity log (created by cron job at midnight)
model DailyActivityLog {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String
  date      DateTime // Date of activity (midnight of that day)

  // Aggregate stats
  totalTimeMinutes    Int      // Total time worked
  tasksWorkedOn       Int      // Number of unique tasks
  suggestionsAccepted Int
  suggestionsRejected Int
  tasksCompleted      Int

  // Detailed per-task breakdown
  taskActivities      Json     // Array of TaskActivity objects

  // Metadata
  createdAt DateTime @default(now())

  @@unique([userId, date])
  @@map("daily_activity_log")
}
