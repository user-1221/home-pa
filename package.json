{
  "name": "home-pa",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "bun --env-file=.env vite dev",
    "build": "bun --env-file=.env vite build",
    "prepare": "lefthook install; bun sync",
    "sync": "svelte-kit sync && bun run prisma:generate",
    "preview": "vite preview",
    "start": "node build/index.js",
    "check": "bun type:check && bun lint:check && bun format:check",
    "fix": "bun format:fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "prisma:generate": "prisma generate",
    "type:check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "format:check": "prettier --check .",
    "format:fix": "prettier --write .",
    "lint:check": "eslint ."
  },
  "devDependencies": {
    "@eslint/compat": "^1.2.5",
    "@eslint/js": "^9.22.0",
    "@sveltejs/adapter-auto": "^6.0.0",
    "@sveltejs/adapter-node": "^5.3.3",
    "@sveltejs/adapter-static": "^3.0.10",
    "@sveltejs/kit": "^2.22.0",
    "@sveltejs/mcp": "^0.1.13",
    "@sveltejs/vite-plugin-svelte": "^6.0.0",
    "@tailwindcss/vite": "^4.0.0",
    "@types/luxon": "^3.7.1",
    "@types/node": "^24",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-svelte": "^3.0.0",
    "globals": "^16.0.0",
    "lefthook": "^2.0.5",
    "prettier": "^3.4.2",
    "prettier-plugin-svelte": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "prisma": "^6.16.2",
    "svelte": "^5.0.0",
    "svelte-check": "^4.0.0",
    "tailwindcss": "^4.0.0",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.20.0",
    "vite": "^7.0.4",
    "vitest": "^4.0.17"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@prisma/client": "^6.16.2",
    "better-auth": "^1.3.11",
    "cally": "^0.9.0",
    "daisyui": "^5.1.13",
    "ical.js": "^2.2.1",
    "luxon": "^3.5.0",
    "rrule": "^2.8.1",
    "valibot": "^1.1.0"
  }
}
